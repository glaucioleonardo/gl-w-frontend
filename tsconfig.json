{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "diagnostics": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "paths": {
      "inputmask": [
        "node_modules/inputmask/dist/inputmask.min.js"
      ]
    }
  },
  "exclude": [
    "node_modules", "**/__tests__/*"
  ]
}
